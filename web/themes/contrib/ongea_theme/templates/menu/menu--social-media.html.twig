
<div class="social-menu">
    {% macro menu_links(items, attributes, menu_level, classes) %}
        {% if items %}
            <ul class="-icons">
                {% for item in items %}
                    {# Set menu name #}
                    {% if item.original_link.pluginDefinition.description %}
                        {% set name = item.original_link.pluginDefinition.description %}
                    {% else %}
                        {% set name = item.title %}
                    {% endif %}

                    <li{{ item.attributes.addClass(item_classes) }}>
                        <a href="{{ item.url }}" target="_blank">{{ name|raw }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endmacro %}

    {{ _self.menu_links(items, attributes, 0, classes ? classes : ['menu', 'menu--' ~ menu_name|clean_class, 'nav']) }}

</div>